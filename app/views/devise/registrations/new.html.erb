<div class="sign_up_page">

  <div class="sign_up_text">
    
    <h2 class="title">formulaire_stylay</h2>
    <h4 class="subtitle">L'inscription devient plus stylay</h4>

    <p class="line">________</p><br />

    <ul>
      <li><%= image_tag "magic-wand.png", id: "magic_wand" %> &nbsp Un CSS des familles, qui fait toujours plaisir</li>
      <li><%= image_tag "women-hippie-style.png", id: "women-hippie-style" %> &nbsp Avec un formulaire un peu bégé</li>
      <li><%= image_tag "databse-icon.png", id: "database-icon" %> &nbsp Et une petite database behind</li>
    </ul>

  </div>

  <div class="sign_up_form">

    <h4>Entrez vos informations</h4>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <div class="fields">

          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Adresse email", class: "field", id: "email_field" %><br />

          <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe", class: "field", id: "password_field" %><br />

          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmation du mot de passe", class: "field", id: "password_confirmation_field" %><br />

        </div>

      <%= f.submit "Créer un compte", class: "button" %>

    <% end %>

  </div>

</div>
